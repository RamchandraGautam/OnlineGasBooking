@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- Login view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>

                                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.Label("UserName", "Username or Email address")
                                        @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "Username", required = true })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Password", "Password")
                                        @Html.Password("Password", null, new { @class = "form-control", placeholder = "Password", required = true })
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success">Login</button>
                                    </div>
                                    <div class="form-group">
                                        <label class="rememberme">
                                            @Html.CheckBox("RememberMe", new { id = "rememberme" }) Remember me
                                        </label>
                                    </div>
                                    <p class="aa-lost-password">
                                        <a href="#">Lost your password?</a>
                                    </p>
                                }

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Don't have an account?</h4>
                                <h3 class="text-info">Click the button below to create a new account</h3>
                                <a href="@Url.Action("RegisterCustomer", "Account")" class="btn btn-primary btn-block fs-2">Register Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Login view section -->
