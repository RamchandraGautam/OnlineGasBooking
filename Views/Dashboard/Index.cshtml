@{
    ViewBag.Title = "Dashboard";
    ViewBag.SubTitle = "Statistics Overview";
}
@section scripts {
    <!-- Morris Charts JavaScript -->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/plugins/morris/raphael.min.js"></script>
    <script src="~/js/plugins/morris/morris.min.js"></script>
    <script src="~/js/plugins/morris/morris-data.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> New Connection</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>New Connection ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Gender</th>
                                <th>Date of Birth</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Postal Code</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>status</th>
                                <th>Doc ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @ViewBag.latestOrders)
                            {

                                <tr>
                                    <td>@item.NewConnectionID</td>
                                    <td>@item.First_Name</td>
                                    <td>@item.Last_Name</td>
                                    <td>@item.Gender</td>
                                    <td>@item.DateofBirth</td>
                                    <td>@item.Country</td>
                                    <td>@item.City</td>
                                    <td>@item.PostalCode</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Address</td>
                                    <td>@(item.status != null ? (item.status == "N" ? "Pending" : "Successful") : "Unknown")</td>
                                    <td><img src="@Url.Content("" +@item.DocPicturePath)" title="No Image" alt="" width="150" height="150"></td>
                                    
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="@Url.Action("Index", "Connection")">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
