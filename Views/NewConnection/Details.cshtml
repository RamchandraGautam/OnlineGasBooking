@model OnlineGasBooking.Models.NewConnection

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<Div class="row">
    <div class="col">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.NewConnectionID)
                @Html.AntiForgeryToken()
                <section class="section about-section gray-bg" id="about">
                    <div class="container">
                        <div class="row align-items-center flex-row-reverse">
                            <div class="col-lg-8">
                                <div class="about-text go-to">
                                    <h2 class="dark-color text-success">Customer Information </h2>
                                    <hr />
                                   
                                    @* <div class="col-md-12">
                                <label class="fs-4">Product Description</label>
                                <p style="text-align:justify;">@Model.ShortDescription</p>
                                </div> *@
                                    <div class="row about-list">
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4">First Name</label>
                                                <p>@Model.First_Name</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4">Last Name</label>
                                                <p>@Model.Last_Name</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4">Gender</label>
                                                <p>@Model.Gender</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4">Date of Birth</label>
                                                <p>@Model.DateofBirth</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row about-list">
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4">Country</label>
                                                <p>@Model.Country</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4">City</label>
                                                <p>@Model.City</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4">Phone</label>
                                                <p>@Model.Phone</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4">Email</label>
                                                <p>@Model.Email</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row about-list">
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4">Pin Code</label>
                                                <p>@Model.PostalCode</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4">Address</label>
                                                <p>@Model.Address</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4">Current Status</label>
                                                <p>@Model.status</p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-4 @*d-flex justify-content-end*@">
                                <div class="about-avatar">
                                    <img src="@Url.Content("" +Model.DocPicturePath)" title="No Image" alt="" width="250" height="250">
                                </div>
                            </div>
                        </div>
                        <div class="counter mt-4">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <a href="@Url.Action("Index", "NewConnection")" class="btn btn-info btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
</Div>

